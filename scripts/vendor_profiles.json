      "mac_table": "show mac address-table interface {pon_if}"
    },
    "autodiscover_regex": "\\bpon\\s+\\d+/\\d+\\b",
    "if_format": { "pon": "pon {slot}/{port}", "pon_if": "pon {slot}/{port}:{onu_id}" }
  },

